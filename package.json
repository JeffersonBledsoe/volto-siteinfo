{
  "name": "volto-siteinfo",
  "version": "1.0.1",
  "description": "volto-siteinfo: Volto add-on",
  "main": "src/index.js",
  "license": "MIT",
  "keywords": [
    "volto-addon",
    "volto",
    "plone",
    "react"
  ],
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "release v${version}",
      "requireBranch": "main",
      "tagName": "${version}"
    },
    "github": {
      "release": true,
      "draft": false
    },
    "npm": {
      "publish": true
    }
  },
  "devDependencies": {
    "@plone/scripts": "2.1.1",
    "release-it": "^15.5.0"
  }
}
